singularity {
  enabled = true
  autoMounts = true
}

process {
    errorStrategy = 'finish'
    
    withLabel: 'julia' {
        container = "library://dialvarezs/default/10x-consensus:latest"
    }

    withName: 'trimAdaptersCutAdapt' {
        container = 'https://depot.galaxyproject.org/singularity/cutadapt:2.10--py36h4c5857e_1'
    }

    withName: 'trimAdaptersFastp' {
        container = 'https://depot.galaxyproject.org/singularity/fastp:0.20.1--h8b12597_0'
    }

    withName: 'mapping' {
        container = 'https://depot.galaxyproject.org/singularity/minimap2:2.17--hed695b0_3'
    }

    withName: 'sortAndConvert' {
        container = 'https://depot.galaxyproject.org/singularity/samtools:1.11--h6270b1f_0'
    }
}
